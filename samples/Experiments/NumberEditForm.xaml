<fxui:Form
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
  xmlns:fxui="clr-namespace:SilverlightFX.UserInterface;assembly=SilverlightFX"
  x:Class="Experiments.NumberEditForm"
  Width="300" Height="100">

  <Border Background="White" BorderThickness="2" BorderBrush="Black" CornerRadius="4">
    <fxui:VStackPanel ChildAlignment="Center" ChildSpacing="4" ChildFlow="Center">
      <TextBlock Text="Enter a Number:" />
      <TextBox Text="{Binding Number, Mode=TwoWay}" />
      <fxui:HStackPanel ChildSpacing="4" ChildAlignment="Center" ChildFlow="Center">
        <Button fxui:Interaction.Command="Cancel" Content="Cancel" />
        <Button fxui:Interaction.Command="OK" Content="OK" />
      </fxui:HStackPanel>
    </fxui:VStackPanel>
  </Border>
  
</fxui:Form>
